<%= form_for @event, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :date, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :summary, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :summary, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :headline, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :headline, :class => 'text_area' %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                events_path, :class => 'btn' %>
  </div>
<% end %>
<% content_for :page_javascript do %>
<script>
$('input#event_date').datepicker({
    daysOfWeekDisabled: "0,6",
    autoclose: true,
    format: "yyyy-mm-dd",
    todayHighlight: true
});
</script>
<% end %>

