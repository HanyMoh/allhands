<%= form_for @event, html: { class: 'form' } do |f| %>
  <div class="form-group">
    <%= f.label :date %>
    <%= f.text_field :date, class: 'datepicker-control form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :headline %>
    <%= f.text_field :headline, class: 'form-control', size: '100' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :summary %>
    <%= f.text_area :summary, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :locked %>
    <%= f.check_box :locked, class: 'form-control' %>
  </div>

  <div class="form-actions">
    <%= f.submit nil, class: 'btn btn-success' %>
    <%= link_to t('.cancel', default: t('helpers.links.cancel')),
                events_path, class: 'btn' %>
  </div>
<% end %>

<% content_for :page_javascript do %>
  <script>
    AllHands.Events.initForm();
  </script>
<% end %>
