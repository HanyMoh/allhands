<div class="jumbotron spacer">
  <h1>INV Engineering All Hands Portal</h1>
  <p>
    Our next event is on XXX.  YYY talks about ZZZ.  YYY and VVV..  
  </p>
  <p><a class="btn btn-primary btn-lg">Ask Q&A questions now &raquo;</a></p>
</div>

<%- model_class = Event -%>
<div id="archive" class="spacer"></div>
<div class="page-header">
  <h1>Previous <%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<div id="new-button"><%= link_to raw("<span class=\"glyphicon glyphicon-plus\"></span>"),
            new_event_path,
            :class => 'btn btn-primary pull-right' %>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
	<td><%= event.date %></td>
        <td><%= link_to event.description, event_path(event) %></td>
        <td class="">
          <%= link_to raw("<span class=\"glyphicon glyphicon-pencil\"></span>"),
                      edit_event_path(event), :class => 'btn btn-default' %> 
          <%= link_to raw("<span class=\"glyphicon glyphicon-trash\"></span>"),
                      event_path(event),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
